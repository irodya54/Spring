<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.springframework.org/schema/context
                            http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:property-placeholder location="classpath:application.properties"/>
    <context:annotation-config/>
    <bean class="ru.radion.bpp.MyBeanPostProcessor"/>

    <bean class="ru.radion.bfpp.LogBeanFactoryPostProcessor"/>
    <bean class="ru.radion.bfpp.VerifyPropertyBeanFactoryPostProcessor"/>
    <bean class="ru.radion.bpp.InjectBeanPostProcessor"/>

<!--    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">-->
<!--        <property name="locations" value="classpath:application.properties"/>-->
<!--    </bean>-->

    <bean name="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="${db.driver}"/>
    </bean>

    <bean id="pool1" name="p1,p2,p3" class="ru.radion.database.connectionPool.ConnectionPool">
        <constructor-arg name="username" value="${db.username}"/>
        <constructor-arg name="poolsize" value="${db.pool.size}"/>
        <constructor-arg name="args">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg name="properties">
               <null/>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="password" value="${db.password}"/>
                <entry key="driver" value-ref="driver"/>
                <entry key="url" value="${db.url}"/>
                <entry key="hosts" value="#{'${db.hosts}'.split(',')}"/>
                <entry key="currentUser" value="#{systemProperties['user.name']}"/>
            </map>
        </property>
    </bean>
    <bean id="companyRepository" class="ru.radion.database.repository.CompanyRepository"/>


    <!--        <bean id="pool2" name="p4" class="ru.radion.database.connectionPool.ConnectionPool"/>-->
</beans>