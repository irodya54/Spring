<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>

    <bean id="pool1" name="p1,p2,p3" class="ru.radion.database.connectionPool.ConnectionPool" init-method="init" destroy-method="destroy">
        <constructor-arg name="username" value="postgres"/>
        <constructor-arg name="poolsize" value="10"/>
        <constructor-arg name="args">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg name="properties">
               <null/>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="url" value="postgresurl"/>
                <entry key="password" value="123"/>
                <entry key="driver" value-ref="driver"/>
            </map>
        </property>
    </bean>
    <bean id="companyRepository" class="ru.radion.database.repository.CompanyRepository" factory-method="of">
        <constructor-arg ref="pool1"/>
    </bean>


    <!--        <bean id="pool2" name="p4" class="ru.radion.database.connectionPool.ConnectionPool"/>-->
</beans>